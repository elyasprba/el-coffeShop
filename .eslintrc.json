{
   "env": {
      "commonjs": true,
      "es2021": true,
      "node": true
   },
   "extends": "eslint:recommended",
   "parserOptions": {
      "ecmaVersion": "latest"
   },
   "rules": {
      "semi": ["error", "always"],
      "no-use-before-define": ["error", { "function": true, "classes": true, "variables": true }]
   }
}
